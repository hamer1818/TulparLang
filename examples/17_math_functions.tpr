// === 2. YUVARLAMA FONKSİYONLARI ===
print("=== 2. Yuvarlama Fonksiyonları ===");
print("");

float num = 3.7;
int floorVal = floor(num);
int ceilVal = ceil(num);
int roundVal = round(num);
int truncVal = trunc(num);

print("floor(3.7) =", floorVal);
print("ceil(3.7) =", ceilVal);
print("round(3.7) =", roundVal);
print("trunc(3.7) =", truncVal);

print("");

// === 3. TRİGONOMETRİK FONKSİYONLAR ===
print("=== 3. Trigonometrik Fonksiyonlar ===");
print("");

float pi = 3.14159;
float angle = pi / 4.0;  // 45 derece (radyan)

float sinVal = sin(angle);
float cosVal = cos(angle);
float tanVal = tan(angle);

print("Açı:", angle, "radyan (45°)");
print("sin(45°) =", sinVal);
print("cos(45°) =", cosVal);
print("tan(45°) =", tanVal);

print("");

// === 4. TERS TRİGONOMETRİK ===
print("=== 4. Ters Trigonometrik ===");
print("");

float asinVal = asin(0.707);
float acosVal = acos(0.707);
float atanVal = atan(1.0);

print("asin(0.707) =", asinVal);
print("acos(0.707) =", acosVal);
print("atan(1.0) =", atanVal);

// atan2 - koordinat bazlı
float atan2Val = atan2(1.0, 1.0);
print("atan2(1, 1) =", atan2Val, "(45° in radians)");

print("");

// === 5. LOGARİTMİK VE ÜSTEL ===
print("=== 5. Logaritmik ve Üstel ===");
print("");

float expVal = exp(1.0);  // e
print("exp(1) = e =", expVal);

float logVal = log(expVal);
print("log(e) =", logVal);

float log10Val = log10(100.0);
print("log10(100) =", log10Val);

float log2Val = log2(8.0);
print("log2(8) =", log2Val);

print("");

