func topla(int a, int b) {
    return a + b;
}

func cikar(int a, int b) {
    return a - b;
}

func carp(int a, int b) {
    return a * b;
}

func bol(int a, int b) {
    if (b == 0) {
        print("âš ï¸ HATA: SÄ±fÄ±ra bÃ¶lme!");
        return 0;
    }
    return a / b;
}

func mutlak(int n) {
    if (n < 0) {
        return 0 - n;
    }
    return n;
}

func kare(int n) {
    return n * n;
}

func kup(int n) {
    return n * n * n;
}

func power(int a, int b) {
    if (b == 0) {
        return 1;
    }
    int sonuc = 1;
    for (int i = 0; i < b; i++) {
        sonuc *= a;
    }
    return sonuc;
}

func faktoriyel(int n) {
    if (n <= 1) {
        return 1;
    }
    int sonuc = 1;
    for (int i = 2; i <= n; i++) {
        sonuc *= i;
    }
    return sonuc;
}

func fibonacci(int n) {
    if (n <= 1) {
        return n;
    }
    int a = fibonacci(n - 1);
    int b = fibonacci(n - 2);
    return a + b;
}

