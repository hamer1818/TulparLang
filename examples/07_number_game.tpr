// ============================================
// SAYI TAHMİN OYUNU (Gelişmiş Versiyon)
// ============================================

print("╔════════════════════════════════╗");
print("║   SAYI TAHMİN OYUNU  🎲       ║");
print("╚════════════════════════════════╝");
print("");

// ----------------------------------------
// OYUN AYARLARI
// ----------------------------------------
int gizli_sayi = 42;  // Gizli sayı (1-100 arası)
int hak = 7;          // Tahmin hakkı
int deneme = 0;       // Deneme sayacı
bool bulundu = false; // Bulundu mu?

print("1 ile 100 arasında bir sayı tuttum!");
print("Tahmin hakkınız:", hak);
print("");

// ----------------------------------------
// OYUN DÖNGÜSÜ
// ----------------------------------------
for (int i = 0; i < hak; i++) {
    deneme++;
    
    print("--- Deneme", deneme, "/", hak, "---");
    int tahmin = inputInt("Tahmininiz: ");
    
    // Tahmin kontrolü
    if (tahmin == gizli_sayi) {
        print("");
        print("╔════════════════════════════════╗");
        print("║   🎉 TEBRİKLER! 🎉            ║");
        print("║   Doğru Bildiniz!             ║");
        print("╚════════════════════════════════╝");
        print("");
        print("Gizli sayı:", gizli_sayi);
        print("Deneme sayısı:", deneme);
        
        bulundu = true;
        break;
    } else {
        // Yakın mı uzak mı?
        int fark = tahmin - gizli_sayi;
        if (fark < 0) {
            fark = 0 - fark;  // Mutlak değer
        }
        
        // İpucu ver
        if (tahmin < gizli_sayi) {
            print("❌ Yanlış! Daha BÜYÜK bir sayı deneyin!");
            
            if (fark <= 5) {
                print("💡 Çok yaklaştınız!");
            } else {
                if (fark <= 15) {
                    print("💡 Yakınsınız!");
                } else {
                    print("💡 Uzaksınız...");
                }
            }
        } else {
            print("❌ Yanlış! Daha KÜÇÜK bir sayı deneyin!");
            
            if (fark <= 5) {
                print("💡 Çok yaklaştınız!");
            } else {
                if (fark <= 15) {
                    print("💡 Yakınsınız!");
                } else {
                    print("💡 Uzaksınız...");
                }
            }
        }
        
        int kalan = hak - deneme;
        if (kalan > 0) {
            print("Kalan hak:", kalan);
        }
        print("");
    }
}

// ----------------------------------------
// OYUN SONU
// ----------------------------------------
if (!bulundu) {
    print("");
    print("╔════════════════════════════════╗");
    print("║   😔 OYUN BİTTİ!             ║");
    print("║   Tahmin hakkınız doldu      ║");
    print("╚════════════════════════════════╝");
    print("");
    print("Gizli sayı:", gizli_sayi);
    print("Deneme sayısı:", deneme);
    print("");
    print("Tekrar deneyin! 💪");
}

print("");
print("=== OYUN TAMAMLANDI ===");

