// Sayı Tahmin Oyunu (Basit Versiyon)

print("=== Sayi Tahmin Oyunu ===");
print("1 ile 10 arasinda bir sayi tuttum!");

int gizli_sayi = 7;  // Şimdilik sabit
int tahmin = inputInt("Tahmininiz: ");

if (tahmin == gizli_sayi) {
    print("Tebrikler! Dogru bildiniz!");
} else {
    if (tahmin < gizli_sayi) {
        print("Daha buyuk bir sayi deneyin!");
    } else {
        print("Daha kucuk bir sayi deneyin!");
    }
    print("Dogru cevap:", gizli_sayi);
}

