arrayStr meyveler = split(bolunecek, ",");
print("Orijinal:", bolunecek);
print("split(','):", meyveler);
print("Uzunluk:", length(meyveler));
print("");

// 14. join()
arrayStr kelimeler = ["Ben", "OLang", "seviyorum"];
print("Dizi:", kelimeler);
print("join(' '):", join(" ", kelimeler));
print("join('-'):", join("-", kelimeler));
print("");

