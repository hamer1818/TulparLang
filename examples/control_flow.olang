// If/Else örneği
int sayi = 15;
int sonuc = 0;

if (sayi > 10) {
    sonuc = 100;
} else {
    sonuc = 50;
}

// While döngüsü örneği
int i = 0;
int toplam = 0;

while (i < 10) {
    toplam = toplam + i;
    i = i + 1;
}

// İç içe if yapısı
int x = 25;
int kategori = 0;

if (x < 10) {
    kategori = 1;
} else {
    if (x < 20) {
        kategori = 2;
    } else {
        kategori = 3;
    }
}

