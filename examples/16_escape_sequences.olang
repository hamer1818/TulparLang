print("╔════════════════════════════════════╗");
print("║   ESCAPE SEQUENCE TESTİ 🔤        ║");
print("╚════════════════════════════════════╝");
print("");

// 1. Çift tırnak içinde tırnak
print("=== 1. Çift Tırnak (\\\" escape) ===");
print("Örnek: \"Merhaba\" dedim.");
print("JSON: {\"ad\": \"Hamza\", \"yas\": 25}");
print("");

// 2. Yeni satır
print("=== 2. Yeni Satır (\\n escape) ===");
print("Birinci satır\nİkinci satır\nÜçüncü satır");
print("");

// 3. Tab karakteri
print("=== 3. Tab Karakteri (\\t escape) ===");
print("Ad:\tHamza");
print("Yaş:\t25");
print("Şehir:\tİstanbul");
print("");

// 4. Backslash
print("=== 4. Backslash (\\\\ escape) ===");
print("Windows yolu: C:\\Users\\Hamza\\Desktop");
print("Regex: \\d+\\s*\\w+");
print("");

// 5. Karışık escape'ler
print("=== 5. Karışık Escape Sequence'ler ===");
print("Mesaj: \"Merhaba,\n\tBu bir test.\n\tYol: C:\\test\\file.txt\"");
print("");

// 6. Object içinde escape
print("=== 6. Object İçinde Escape ===");
var kullanici = {
    "ad": "Hamza",
    "mesaj": "\"Merhaba\"\nNasılsın?",
    "yol": "C:\\Users\\Desktop"
};

print("Kullanıcı:");
print(kullanici);
print("Mesaj:", kullanici["mesaj"]);
print("Yol:", kullanici["yol"]);
print("");

// 7. Array içinde escape
print("=== 7. Array İçinde Escape ===");
var mesajlar = [
    "Satır 1\nSatır 2",
    "Tab\tkarakterleri",
    "\"Tırnak\" içinde"
];

print("Mesajlar:", mesajlar);
print("Mesaj 1:", mesajlar[0]);
print("Mesaj 2:", mesajlar[1]);
print("Mesaj 3:", mesajlar[2]);
print("");

print("╔════════════════════════════════════╗");
print("║   ✅ ESCAPE SEQUENCE OK!          ║");
print("╚════════════════════════════════════╝");
print("");
print("Desteklenen Escape Sequence'ler:");
print("  ✅ \\n  - Yeni satır");
print("  ✅ \\t  - Tab");
print("  ✅ \\r  - Carriage return");
print("  ✅ \\\\  - Backslash");
print("  ✅ \\\"  - Çift tırnak");
print("  ✅ \\0  - Null karakter");
