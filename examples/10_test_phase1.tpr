// ----------------------------------------
// 1. MANTIKSAL OPERATÖRLER (&&, ||, !)
// ----------------------------------------
print("=== 1. MANTIKSAL OPERATÖRLER ===");
print("");

int x = 5;
int y = 10;
int z = 15;

// AND (&&)
if (x > 3 && y < 15) {
    print("✅ AND operatörü çalışıyor!");
    print("   (5 > 3) && (10 < 15) = true");
}

if (x > 10 && y < 15) {
    print("❌ Bu mesaj görünmemeli!");
} else {
    print("✅ AND false durumu doğru!");
    print("   (5 > 10) && (10 < 15) = false");
}
print("");

// OR (||)
if (x == 10 || y == 10) {
    print("✅ OR operatörü çalışıyor!");
    print("   (5 == 10) || (10 == 10) = true");
}

if (x == 100 || y == 200) {
    print("❌ Bu mesaj görünmemeli!");
} else {
    print("✅ OR false durumu doğru!");
    print("   (5 == 100) || (10 == 200) = false");
}
print("");

// NOT (!)
bool dogru = true;
bool yanlis = !dogru;

if (yanlis == false) {
    print("✅ NOT operatörü çalışıyor!");
    print("   !true = false");
}

if (!yanlis) {
    print("✅ NOT ile koşul kontrolü çalışıyor!");
    print("   !false = true");
}
print("");

// Karmaşık ifadeler
if ((x < y) && (y < z) && (z > 10)) {
    print("✅ Çoklu AND çalışıyor!");
}

if ((x == 5) || (y == 20) || (z == 30)) {
    print("✅ Çoklu OR çalışıyor!");
}
print("");

