// ----------------------------------------
// 3. COMPOUND ASSIGNMENT (+=, -=, *=, /=)
// ----------------------------------------
print("=== 3. COMPOUND ASSIGNMENT ===");
print("");

int toplam = 10;
print("Başlangıç: toplam =", toplam);

toplam += 5;
print("toplam += 5 →", toplam);

toplam += 10;
print("toplam += 10 →", toplam);

toplam -= 5;
print("toplam -= 5 →", toplam);

toplam *= 2;
print("toplam *= 2 →", toplam);

toplam /= 4;
print("toplam /= 4 →", toplam);

print("✅ Compound assignment çalışıyor!");
print("");

// Döngüde kullanım
print("Döngüde compound assignment:");
int sayac = 0;
for (int k = 0; k < 5; k++) {
    sayac += k;
    print("  sayac += ", k, "→ sayac =", sayac);
}
print("");

// ----------------------------------------
// 4. BREAK ve CONTINUE
// ----------------------------------------
print("=== 4. BREAK & CONTINUE ===");
print("");

// BREAK örneği
print("Break örneği (0-9, stop at 5):");
for (int m = 0; m < 10; m++) {
    if (m == 5) {
        print("  Break! m = 5");
        break;
    }
    print("  m =", m);
}
print("✅ Break çalışıyor!");
print("");

// CONTINUE örneği
print("Continue örneği (0-9, skip 3,5,7):");
for (int n = 0; n < 10; n++) {
    if (n == 3 || n == 5 || n == 7) {
        continue;
    }
    print("  n =", n);
}
print("✅ Continue çalışıyor!");
print("");

// BREAK & CONTINUE birlikte
print("Break & Continue birlikte (0-20, skip 5,10, stop at 15):");
for (int p = 0; p < 20; p++) {
    if (p == 15) {
        print("  Break! p = 15");
        break;
    }
    if (p == 5 || p == 10) {
        continue;
    }
    print("  p =", p);
}
print("✅ Break & Continue birlikte çalışıyor!");
print("");

// WHILE ile break
print("While ile break (stop at 7):");
int w = 0;
while (w < 100) {
    if (w == 7) {
        print("  While break! w = 7");
        break;
    }
    print("  w =", w);
    w++;
}
print("✅ While + Break çalışıyor!");
print("");

