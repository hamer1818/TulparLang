// 6. KARMA KULLANIM
// ----------------------------------------
print("=== 6. KARMA KULLANIM ===");
print("");

int sayi = 0;
for (int i2 = 0; i2 < 20; i2++) {
    // Continue ile çift sayıları atla
    int kalan = i2 - ((i2 / 2) * 2);
    if (kalan == 0) {
        continue;
    }
    
    // Compound assignment
    sayi += i2;
    
    // Logical operator ile kontrol
    if (sayi > 50 && i2 > 10) {
        print("  Toplam 50'yi geçti ve i > 10!");
        break;
    }
    
    print("  i =", i2, ", toplam =", sayi);
}
print("✅ Karma kullanım çalışıyor!");
print("");

