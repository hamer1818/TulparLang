// ----------------------------------------
// 6. DİZİ İSTATİSTİKLERİ
// ----------------------------------------
print("=== 6. DİZİ İSTATİSTİKLERİ ===");
print("");

arrayInt notlar = [85, 90, 78, 92, 88, 95, 82];
print("Notlar:", notlar);

// Toplam ve ortalama
int not_toplam = 0;
for (int i = 0; i < length(notlar); i++) {
    not_toplam += notlar[i];
}
int ortalama = not_toplam / length(notlar);

// En büyük
int max = notlar[0];
for (int i = 1; i < length(notlar); i++) {
    if (notlar[i] > max) {
        max = notlar[i];
    }
}

// En küçük
int min = notlar[0];
for (int i = 1; i < length(notlar); i++) {
    if (notlar[i] < min) {
        min = notlar[i];
    }
}

print("Toplam:", not_toplam);
print("Ortalama:", ortalama);
print("En yüksek:", max);
print("En düşük:", min);
print("✅ Dizi istatistikleri çalışıyor!");
print("");

// ----------------------------------------
// 7. DİZİ DEĞİŞTİRME
// ----------------------------------------
print("=== 7. DİZİ DEĞİŞTİRME ===");
print("");

arrayInt degerler = [1, 2, 3, 4, 5];
print("Önce:", degerler);

// Her elemanı 2 ile çarp
for (int i = 0; i < length(degerler); i++) {
    degerler[i] = degerler[i] * 2;
}
print("2 ile çarpma sonrası:", degerler);

// İlk ve son elemanı değiştir
int temp = degerler[0];
degerler[0] = degerler[length(degerler) - 1];
degerler[length(degerler) - 1] = temp;
print("İlk-son değişim:", degerler);

print("✅ Dizi değiştirme çalışıyor!");
print("");

